@model TesisProj.Models.RegisterExternalLoginModel
@{
    ViewBag.Title = "Regístrate";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Asocia tu cuenta de @ViewBag.ProviderDisplayName.</h2>
</hgroup>

@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Asociación</legend>
        <p>
            Te has autenficado exitosamente con <strong>@ViewBag.ProviderDisplayName</strong>.
            Por favor, ingrese un usuario para este sitio y seleccione el botón de confirmación
            para finalizar su inicio de sesión.
        </p>
        <ol>
            <li class="name">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
        </ol>
        @Html.HiddenFor(m => m.ExternalLoginData)
        <input type="submit" value="Registrar" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
