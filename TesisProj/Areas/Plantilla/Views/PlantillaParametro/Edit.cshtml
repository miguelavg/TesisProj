@model TesisProj.Areas.Plantilla.Models.PlantillaParametro

@{
    ViewBag.Title = "Parámetros: " + @ViewBag.Plantilla;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar @Model.Nombre (@ViewBag.Plantilla)</h2>

<p>
    <br />
    <a class="btn btn-inverse" style="color: #E6F0F2"href="@Url.Action("Index", new { id = @Model.IdPlantillaElemento })">
  	    <i class="icon-arrow-left icon-white"></i>Regresar
    </a><br /><br />
</p>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Parámetro</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Nombre)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nombre)
            @Html.ValidationMessageFor(model => model.Nombre)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Referencia)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Referencia)
            @Html.ValidationMessageFor(model => model.Referencia)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IdPlantillaElemento)
        </div>
        <div class="editor-field">
            @Html.DropDownList("IdPlantillaElemento")
            @Html.ValidationMessageFor(model => model.IdPlantillaElemento)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IdTipoDato)
        </div>
        <div class="editor-field">
            @Html.DropDownList("IdTipoDato", String.Empty)
            @Html.ValidationMessageFor(model => model.IdTipoDato)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Constante)
        </div>
        <div class="editor-field">
            @Html.CheckBoxFor(model => model.Constante)
            @Html.ValidationMessageFor(model => model.Constante)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Sensible)
        </div>
        <div class="editor-field">
            @Html.CheckBoxFor(model => model.Sensible)
            @Html.ValidationMessageFor(model => model.Sensible)
        </div>

        @Html.HiddenFor(model => model.Id)

        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}

<p>
    <a class="btn btn-inverse" style="color: #E6F0F2"href="@Url.Action("Index", new { id = @Model.IdPlantillaElemento })">
  	    <i class="icon-arrow-left icon-white"></i>Regresar
    </a>
</p>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
