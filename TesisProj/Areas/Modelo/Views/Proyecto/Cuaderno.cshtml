@model IEnumerable<TesisProj.Areas.Modelo.Models.Formula>

@{
    ViewBag.Title = "Fórmulas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Fórmulas</h2>

<p>
    @Html.ActionLink("Crear", "CreateFormula", new { idElemento = ViewBag.ElementoId }) | 
    @Html.ActionLink("Ver Resultados", "Programa", new { id = ViewBag.ElementoId }) |
    @Html.ActionLink("Ver parámetros", "VerParametros", new { id= ViewBag.ElementoId })
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Secuencia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Referencia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdElemento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdTipoFormula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Visible)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Secuencia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Referencia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Elemento.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoFormula.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Visible)
        </td>
        <td>
            @Html.ActionLink("Editar", "EditFormula", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "DeleteFormula", new { id=item.Id })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Ver elementos", "Journal", new { id = ViewBag.IdProyecto })
</div>