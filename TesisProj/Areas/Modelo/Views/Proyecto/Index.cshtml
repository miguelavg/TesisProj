@model IEnumerable<TesisProj.Areas.Modelo.Models.Proyecto>

@{
    ViewBag.Title = "Proyectos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Evaluación de Proyectos</h2>

<p>
    <br /><br />
    <a class="btn btn-inverse" style="color: #E6F0F2"href="@Url.Action("Create", "Proyecto", new { Area = "Modelo" })"">
  	    <i class="icon-plus icon-white"></i>Nuevo
    </a>
    <br /><br />
</p>
<table class="table table-hover table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Version)
        </th>   
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>            
        <th>
            @Html.DisplayNameFor(model => model.IdCreador)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Creacion)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Nombre, "Console", new { id=item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Version)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Creador.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Creacion)
        </td>
    </tr>
}
</table>
<p>
    <br />
    <a class="btn btn-inverse" style="color: #E6F0F2"href="@Url.Action("Index", "Home", new { Area = "" })"">
  			<i class="icon-arrow-left icon-white"></i>Regresar
    </a>
</p>