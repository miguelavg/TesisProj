@model TesisProj.Areas.Modelo.Models.Formula

@{
    ViewBag.Title = "DeleteFormula";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar fórmula</h2>

<h3>¿Está seguro de eliminar este registro?</h3>
<fieldset>
    <legend>Fórmula</legend>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Nombre)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Nombre)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Secuencia)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Secuencia)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Referencia)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Referencia)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.IdTipoFormula)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.TipoFormula.Nombre)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.PeriodoInicial)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.PeriodoInicial)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.PeriodoFinal)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.PeriodoFinal)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Cadena)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Cadena)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" value="Eliminar" /> |
        @Html.ActionLink("Regresar", "Catalog", new { id = Model.IdElemento })
    </p>
    @Html.ValidationMessageFor(model => model.Nombre)
}
