@using Telerik.Web.Mvc.UI	
@model ICollection<IridiumTest.Models.Graphic>

<h1>Van Económico</h1>

		@(Html.Telerik().Chart(Model)
			.Name("chartvanInversionista")
			.Legend(legend => legend
				.Position(ChartLegendPosition.Bottom)
				.Visible(true)
			)
			.Series(series =>
			{
				series.Column(s => s.N).Name("X");  // LO QUE DIBUJA LAS BARRAS
			})
			.CategoryAxis(axis => axis
			.Categories(s => s.fx) //ETIQUETA DE LAS X
			)
			.ValueAxis(axis => axis
				.Numeric().Labels(labels => labels.Format("{0:N}"))//ETIQUETA DE LAS Y
				.MajorGridLines(majorGridLines => majorGridLines.Visible(false))
				.PlotBands(plotBands =>
					  {
                          plotBands.Add().Color("#13558E").From(0).To(12000).Opacity(0.3);
					  })
				  )
			.Tooltip(tooltip => tooltip
				.Visible(true)
				.Format("{0:N}")
			)
			.HtmlAttributes(new { style = "width: 400px; height: 200px; margin: auto;" })
		)